<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Outer_Space">


    <ImageView
        android:id="@+id/homeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext"
        android:src="@drawable/ic_home_black_24dp" />




    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="cursive"
        android:text="User Profile"
        android:textColor="@color/Ash_Gray"
        android:textSize="32sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileTitle"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rounded_edittext"
        android:padding="16dp">


        <TextView
            android:id="@+id/nameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Name"
            android:textColor="@color/Ash_Gray"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="24sp" />


        <RelativeLayout
            android:id="@+id/itemStatsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameLabel"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/totalItemCountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total item count:"
                android:textColor="@color/Ash_Gray"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/totalItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/totalItemCountLabel"
                android:layout_marginStart="8dp"
                android:text="2"
                android:textColor="@color/Ash_Gray"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/totalItemValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalItemCountLabel"
                android:text="Total item value:"
                android:textColor="@color/Ash_Gray"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/totalItemValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalItemCount"
                android:layout_toEndOf="@id/totalItemValueLabel"
                android:layout_marginStart="8dp"
                android:text="$69.42"

                android:textColor="@color/Ash_Gray"
                android:textSize="18sp" />


        </RelativeLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="439dp"
        android:background="@drawable/rounded_edittext"
        android:text="Logout" />


</RelativeLayout>
