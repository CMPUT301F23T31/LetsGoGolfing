<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTagsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new tags"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Display selected tags using RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tagsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTagsEditText"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/saveTagsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Tags"
        android:layout_below="@id/tagsRecyclerView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>