<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#88CEB4"
    android:elevation="4dp"
    android:radius="8dp">

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="143dp"
        android:layout_height="147dp"
        android:background="@drawable/rounded_image_background"
        android:src="@android:drawable/ic_menu_gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="Value: $9.41"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/tagContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toEndOf="@+id/itemImage"
        app:layout_constraintTop_toBottomOf="@+id/itemDescription"
        app:layout_constraintVertical_bias="0.887" />

    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:text="Description"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toEndOf="@+id/itemImage"
        tools:layout_editor_absoluteY="2dp" />

    <LinearLayout
        android:id="@+id/tagContainer"
        android:layout_width="196dp"
        android:layout_height="33dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemImage">

        <!-- Sample tags. In a real implementation, this would be dynamic. -->

        <TextView
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:background="@drawable/tag_background"
            android:padding="2dp"
            android:text="Tag1"

            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:background="@drawable/tag_background"
            android:padding="2dp"
            android:text="Tag2"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <ImageView
        android:id="@+id/editButton"
        android:layout_width="36dp"
        android:layout_height="33dp"
        android:layout_marginEnd="44dp"
        android:paddingTop="4dp"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tagContainer"
        app:layout_constraintTop_toTopOf="@+id/tagContainer"
        app:layout_constraintVertical_bias="0.0"
        app:tint="#4CAF50" />

</androidx.constraintlayout.widget.ConstraintLayout>

