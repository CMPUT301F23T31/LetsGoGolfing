<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.letsgogolfing.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_additem2"
            app:destination="@id/navigation_additem" />
    </fragment>



    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.letsgogolfing.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/naviagation_userprofile"
        android:name="com.example.letsgogolfing.ui.notifications.NotificationsFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_additem"
        android:name="com.example.letsgogolfing.ui.additem.AddItemFragment"
        android:label="Add"
        tools:layout="@layout/edit_item_page" />

</navigation>