<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.letsgogolfing.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.letsgogolfing.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard">
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.letsgogolfing.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications">
    </fragment>

    <fragment
        android:id="@+id/itemFragment"
        android:name="com.example.letsgogolfing.ui.item.ItemFragment"
        android:label="@string/title_item"
        tools:layout="@layout/view_item">
        <action
            android:id="@+id/action_home_to_itemFragment"
            app:destination="@id/itemFragment" />
    </fragment>

</navigation>